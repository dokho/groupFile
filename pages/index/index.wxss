.checkbox .wx-checkbox-input {
	border-radius: 32rpx; /* 圆角 */
	width: 36rpx; /* 背景的宽 */
	height: 36rpx; /* 背景的高 */
	border: 2rpx solid #f5f5f5;
	background: #f5f5f5;
	position: absolute;
	bottom: 45rpx;
	right: 30rpx;
}

.checkbox .wx-checkbox-input-disabled {
	border-radius: 32rpx; /* 圆角 */
	width: 36rpx; /* 背景的宽 */
	height: 36rpx; /* 背景的高 */
	background: #f5f5f5;
	border: 2rpx solid #f5f5f5;
}

.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
	background: rgba(253, 87, 70, 0.8);
	border: 2rpx rgba(253, 87, 70, 0.8);
}

.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
	width: 34rpx;
	height: 34rpx;
	line-height: 34rpx;
	text-align: center;
	font-size: 20rpx;
	color: #fff;
	transform: translate(-50%, -50%) scale(1);
	-webkit-transform: translate(-50%, -50%) scale(1);
	position: absolute;
	bottom: 30rpx;
	right: 15rpx;
}

